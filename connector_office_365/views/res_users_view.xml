<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_users_form_office365" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <notebook colspan="4" position="inside">
                    <page string="Office 365">
                        <group>
                            <field name="office_365_url_base"/>
                            <field name="office_365_client_id"/>
                            <field name="office_365_client_secret"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

</odoo>

